<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.semenov_chair.viewmodel.MainActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical"
        tools:context=".view.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Створення стільця"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Матеріал:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Наприклад: дерево, метал, пластик"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:text="@={viewModel.chairLiveData.material}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Колір:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Наприклад: коричневий, білий, чорний"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:text="@={viewModel.chairLiveData.color}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Висота (см):"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Наприклад: 85"
            android:layout_marginBottom="16dp"
            android:inputType="number"
            android:text="@={viewModel.chairLiveData.height}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ціна (грн):"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Наприклад: 2500.50"
            android:layout_marginBottom="16dp"
            android:inputType="numberDecimal"
            android:text="@={viewModel.chairLiveData.price}" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Має підлокітники"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"
            android:checked="@={viewModel.chairLiveData.hasArmrests}" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Створити стілець"
            android:textSize="16sp"
            android:padding="16dp"
            android:onClick="@{viewModel::onNextButtonClicked}" />

    </LinearLayout>
</layout>
